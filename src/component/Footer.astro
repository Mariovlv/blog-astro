    box-sizing: border-box;
  }

  .footer-section h2,
  .footer-section h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .footer-section p,
  .footer-section ul {
    color: var(--text-color);
  }

  .footer-section ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

