---
const { post } = Astro.props;
---

<a href={`/blog/${post.slug}`} class="blog-preview">
  <article>
    <div class="image-container">
      <img
        src={post.frontmatter.image}
        alt={`${post.frontmatter.title} image`}
        class="blog-image"
        width={90}
        height={90}
      />
    </div>
    <div class="content">
      <h3>{post.frontmatter.title}</h3>
      <p>{post.frontmatter.description}</p>
    </div>
    <span class="pub-date roboto-mono">{post.frontmatter.pubDate}</span>
  </article>
</a>

<style>
  /* Carousel Container (You'll need to add this in your main CSS) */
  .blog-carousel {
    display: flex;
    flex-direction: column;
    gap: 1rem; /* Adjust the gap as needed */
  }

  .blog-preview {
    display: flex;
    flex-direction: column;
    border-radius: 12px; /* Increased border radius */
    overflow: hidden; /* Clip the image for rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition:
      box-shadow 0.3s ease,
      transform 0.3s ease;
    text-decoration: none;
    color: inherit;
  }

  .image-container {
    overflow: hidden;
    border-radius: 12px 12px 0 0; /* Rounded top corners */
  }

  .blog-image {
    width: 100%;
    height: 200px; /* Fixed height for the image */
    object-fit: cover;
    transition: transform 0.3s ease; /* Add hover effect */
  }

  .blog-preview:hover .blog-image {
    transform: scale(1.05);
  }

  .content {
    padding: 1.5rem;
    background-color: #fff; /* White background for content */
  }

  .blog-preview h3 {
    margin: 0 0 0.5rem;
    font-size: 1.25rem;
    color: #333; /* Darker title color */
    line-height: 1.4;
  }

  .blog-preview p {
    margin: 0 0 1rem; /* Added bottom margin */
    font-size: 1rem;
    line-height: 1.6;
    color: #666;
  }

  .pub-date {
    padding: 0.5rem 1.5rem;
    font-size: 0.875rem;
    color: #888; /* Lighter pub date color */
    background-color: #f8f8f8; /* Subtle background for date */
    border-radius: 0 0 12px 12px; /* Rounded bottom corners */
    text-align: center;
  }

  .blog-preview:hover {
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    transform: translateY(-4px);
  }

  /* ... (your media queries) ... */
</style>
