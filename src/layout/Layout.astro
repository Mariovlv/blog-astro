---
import Navbar from "../component/Navbar.astro";
import Footer from "../component/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style is:global>
      @font-face {
        font-family: "Inter";
        src: url("../../public/Inter_18pt-Regular.ttf");
      }
      @font-face {
        font-family: "Epilogue";
        src: url("../../public/Epilogue-Regular.ttf");
      }
      @font-face {
        font-family: "Roboto Mono";
        src: url("../../public/RobotoMono-Regular.ttf");
      }
      .roboto-mono {
        font-family: "Roboto Mono", monospace;
      }
      .epilogue {
        font-family: "Epilogue", sans-serif;
      }
      .inter {
        font-family: "Inter", sans-serif;
      }
      :root {
        --space: 1rem;
        font-family: "Inter", sans-serif;
      }
      body {
        padding: 0;
        margin: 0;
      }
      nav,
      .content {
        margin: var(--space);
      }

      a {
        color: #4caf50;
      }
    </style>
  </head>
  <body>
    <Navbar />
    <div class="content">
      <slot />
    </div>
    <Footer />
  </body>
</html>
