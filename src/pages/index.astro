---
import Layout from "../layout/Layout.astro";
import BlogPreview from "../component/BlogPreview.astro";
import HeroSection from "../component/HeroSection.astro"; // Import the new component

const allPosts = await Astro.glob("../content/blog/*.md");
const latestPosts = allPosts
  .sort(
    (a, b) =>
      Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate)
  )
  .slice(0, 3);
---

<Layout title="tarjetaymas - Tu Fuente de Información Financiera en México">
  <main class="container">
    <HeroSection
      title="¡Domina tus Finanzas con tarjeta y mas!"
      listItems={[
        "Reseñas de tarjetas detalladas y objetivas",
        "Análisis bancarios expertos y confiables",
        "Cursos que transformarán tu relación con el dinero",
        "Comunidad activa para compartir y aprender",
        "Noticias financieras relevantes y actualizadas",
      ]}
      imageSrc="./money.jpg"
      imageAlt="Imagen de dinero"
      ctaText="Explora Nuestros Artículos"
      ctaLink="#blog-section"
    />
    <section class="blog-container" id="blog-section">
      {latestPosts.map((post) => <BlogPreview post={post} />)}
    </section>
  </main>
</Layout>
<style>
  /* Global Styles */
  ul {
    list-style: none;
    padding: 0;
  }

  li {
    color: #45a049;
    font-size: larger;
  }

  a {
    margin-top: 3rem;
  }

  /* Container Styles */
  .container {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 2rem;
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Hero Section Styles */
  .hero-text {
    grid-column: span 5; /* Adjusted for better responsiveness */
    display: flex;
    flex-direction: column; /* Stack elements vertically */
    align-items: flex-start; /* Align items to the left */
    text-align: left;
  }

  .hero-text h1 {
    font-size: 2.5rem;
    color: #4caf50;
    margin-bottom: 1rem;
  }

  .animated-list {
    margin-bottom: 1.5rem;
  }

  .animated-list li {
    opacity: 0;
    transform: translateY(10px);
    transition:
      opacity 0.5s ease,
      transform 0.5s ease;
    margin-bottom: 0.5rem;
  }

  .animated-list li.show {
    opacity: 1;
    transform: translateY(0);
  }

  .checkmark {
    color: #4caf50;
    margin-right: 0.5rem;
  }

  .cta-button {
    display: inline-block;
    background-color: #4caf50;
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: #45a049;
  }

  /* Image Container Styles */
  .image-container {
    grid-column: span 7; /* Adjusted for better responsiveness */
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .image-container img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Blog Container Styles */
  .blog-container {
    grid-column: span 12; /* Full width on smaller screens */
  }

  .blog-container h2 {
    font-size: 2rem;
    color: #4caf50;
    margin-bottom: 3rem;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  /* View All Button Styles (same as CTA button for consistency) */
  .view-all-button {
    display: inline-block;
    background-color: #333;
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .view-all-button:hover {
    background-color: #555;
  }

  /* Responsive Styles */
  @media (max-width: 1024px) {
    .text-container,
    .image-container {
      grid-column: span 6; /* Equal width on medium screens */
    }
  }

  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr; /* Single column on small screens */
      gap: 1.5rem;
      padding: 1.5rem;
    }

    .text-container,
    .image-container,
    .blog-container {
      grid-column: span 1; /* Full width on small screens */
    }

    .hero-text {
      text-align: center; /* Center text on small screens */
      align-items: center;
    }

    .blog-grid {
      grid-template-columns: 1fr; /* Single column for blog previews */
    }
  }
</style>
